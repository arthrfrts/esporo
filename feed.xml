---
# Hello, Jekyll!
---
<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom" {% if site.lang %}xml:lang="{{- site.lang -}}"{%- endif -%}>
	<title>{{- site.title | xml_escape -}}</title>
	<subtitle>{{- site.tagline | default: site.description -}}</subtitle>
	<link href="{{ page.url | absolute_url }}" type="application/atom+xml" rel="self" />
	<link href="{{ site.url }}" rel="alternate" type="text/html" {% if site.lang %}hreflang="{{ site.lang }}" {% endif %} />
	<id>{{ page.url | absolute_url | xml_escape }}</id>
	<updated>{{ site.time | date_to_xmlschema }}</updated>

  {%- for post in site.posts limit: 10 -%}
    <entry>
      <title type="html">{{ post.title | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
      <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}" />
      <published>{{ post.date | date_to_xmlschema }}</published>
      <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
      <id>{{ post.id | absolute_url | xml_escape }}</id>
      <content type="html" xml:base="{{ post.url | absolute_url | xml_escape }}">{{ post.content | strip | xml_escape }}</content>

      {%- if post.category -%}
        <category term="{{ post.category | xml_escape }}" />
      {%- endif -%}

      {%- for tag in post.tags -%}
        <category term="{{ tag | xml_escape }}" />
      {%- endfor -%}

      {%- if post.author -%}
        {%- assign author = site.data.authors[post.author] -%}
        <author>
          <name>{{ author.name | default: "" | xml_escape }}</name>
          {%- if author.email -%}
            <email>{{ author.email | xml_escape }}</email>
          {%- endif -%}
          {%- if author.url -%}
            <uri>{{ author.url | xml_escape }}</uri>
          {%- endif -%}
        </author>
      {%- endif -%}

      {%- if post.excerpt and post.excerpt != blank -%}
        <summary type="html">{{ post.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>
      {%- endif -%}

      {%- if post.image -%}
        <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post.image | xml_escape }}" />
      {%- endif -%}
    </entry>
  {%- endfor -%}
</feed>
